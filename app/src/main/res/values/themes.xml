<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.CameraTest_14" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <item name="windowNoTitle">true</item> <!-- 是否顯示Title，若選擇是則 隱藏 Title -->
        <item name="windowActionBar">false</item> <!-- 是否顯示 ActionBar，選擇是則 顯示 ActionBar -->
        <item name="android:windowFullscreen">true</item> <!-- 是否全銀幕顯示，若選擇是則 隱藏 ActionBar 與 StatusBar -->
        <!-- 開啟 AndroidManifest.xml，將沒有 Toolbar 的主題樣式套用  android:theme= "@style/Theme.NoActionBar" -->
        <!-- 實測沒有變更 AndroidManifest.xml，仍能夠套用 -->


        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>
</resources>